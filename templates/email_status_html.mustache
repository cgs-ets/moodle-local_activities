
{{!
    @template local_activities/email_status_html

    Template for status email html.

}}
<p>The status of your activity has changed to: </p>
<h2>
    <strong>
        {{#newstatus.inreview}}
            In review
        {{/newstatus.inreview}}
        {{#newstatus.isapproved}}
            Approved
        {{/newstatus.isapproved}}
        {{#newstatus.iscancelled}}
            Cancelled
        {{/newstatus.iscancelled}}
    </strong>
</h2>

<!-- Details -->
{{#activity}}
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <td>
                <table border="0" cellspacing="0" cellpadding="20">
                    <tr>
                        <td style="border-radius: 3px;" bgcolor="#f0f4f6">
                            <div style="font-size: 15px;font-family: Helvetica, Arial, sans-serif;text-decoration: none;border-radius: 3px;display: block;">
                                <table border="0" cellspacing="0" cellpadding="0">
                                    {{>local_activities/email_activity_details}}
                                </table>
                            </div>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr> 
            <td height="20"></td> 
        </tr>
    </table>
{{/activity}}


<!-- Action button -->
<table cellspacing="0" cellpadding="0" style="font-family: Open Sans, -apple-system, BlinkMacSystemFont, Roboto, Helvetica Neue, Helvetica, Arial, sans-serif; border-collapse: collapse; width: 100%;">  
  <tr> 
      <td height="20"></td> 
  </tr>
  <tr>
      <td align="left" style="font-family: Open Sans, -apple-system, BlinkMacSystemFont, Roboto, Helvetica Neue, Helvetica, Arial, sans-serif;">
          <table cellpadding="0" cellspacing="0" border="0" class="bg-blue rounded w-auto" style="font-family: Open Sans, -apple-system, BlinkMacSystemFont, Roboto, Helvetica Neue, Helvetica, Arial, sans-serif; border-collapse: separate; width: auto; color: #ffffff; border-radius: 3px;" bgcolor="#206cc5">
              <tr>
                  <td align="left" valign="top" class="lh-1" style="font-family: Open Sans, -apple-system, BlinkMacSystemFont, Roboto, Helvetica Neue, Helvetica, Arial, sans-serif; line-height: 100%;">
                      <a href="{{activity.manageurl}}" class="btn bg-blue border-blue" style="color: #ffffff; padding: 12px 32px; border: 1px solid #206cc5; text-decoration: none; white-space: nowrap; font-weight: 600; font-size: 16px; border-radius: 3px; line-height: 100%; display: block; -webkit-transition: .3s background-color; transition: .3s background-color; background-color: #206cc5;">
                          <span class="btn-span" style="color: #ffffff; font-size: 16px; text-decoration: none; white-space: nowrap; font-weight: 600; line-height: 100%;">View activity online &rarr;</span>
                      </a>
                  </td>
              </tr>
          </table>
      </td>
  </tr>
</table>

