
{{!
    @template local_activities/email_attending_html

    Template for approval email html.

}}

<p>Dear {{studentname}},</p>

<p>{{parentname}} has provided permission and indicated that you will be attending the following activity.</p>

<!-- Details -->
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <td>
            <table border="0" cellspacing="0" cellpadding="20">
                <tr>
                    <td style="border-radius: 3px;" bgcolor="#f0f4f6">
                        <div style="font-size: 15px;font-family: Helvetica, Arial, sans-serif;text-decoration: none;border-radius: 3px;display: block;">
                            <table border="0" cellspacing="0" cellpadding="0">
                                {{#activitydetails}}
                                    <tr><td>{{{activitydetails}}}</td></tr>
                                {{/activitydetails}}
                                {{^activitydetails}}
                                    {{>local_excursions/email_activity_details}}
                                {{/activitydetails}}
                            </table>
                        </div>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr> 
        <td height="20"></td> 
    </tr>
</table>
